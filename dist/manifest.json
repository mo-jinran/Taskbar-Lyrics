{
    "manifest_version": 1,
    "name": "Taskbar Lyrics",
    "description": "在任务栏上嵌入歌词，目前仅支持Windows 11，任务栏对齐方式为居中",
    "preview": "preview.png",
    "version": "1.0.0",
    "author": "沫烬染",
    "author_links": [
        "https://github.com/mo-jinran"
    ],
    "type": "extension",
    "injects": {
        "Main": [
            {
                "file": "index.js"
            }
        ]
    },
    "hijacks": {
        ">=0.0.0": {
            "orpheus://orpheus/pub/app.html": {
                "type": "replace",
                "from": "<meta http-equiv=\"Content-Security-Policy\" content=\"script-src ",
                "to": "<meta http-equiv=\"Content-Security-Policy\" content=\"script-src data: blob: "
            }
        }
    }
}
